pipeline {
    agent any

    environment {
        DOCKER_IMAGE = "myapp:%BUILD_NUMBER%"
    }

    stages {

        stage('Install Dependencies') {
            steps {
                bat 'pip install -r requirements.txt'
            }
        }

        stage('Unit Tests') {
            steps {
                bat 'pytest test_app.py --junitxml=unit-report.xml'
            }
            post {
                always {
                    junit 'unit-report.xml'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                bat 'docker build -t myapp:%BUILD_NUMBER% .'
            }
        }

        stage('Deploy Container') {
            steps {
                bat 'docker run -d -p 5000:5000 myapp:%BUILD_NUMBER%'
            }
        }
    }
}
